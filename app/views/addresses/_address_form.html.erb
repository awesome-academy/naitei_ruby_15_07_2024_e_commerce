<%= form_with model: Address.new, url: addresses_path, method: :post, local: true, id: "new_address_form" do |form| %>
  <div class="form-group">
    <%= form.label :place, t("addresses.add_address.place_label") %>
    <%= form.text_field :place, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :default, t("addresses.add_address.default_label") %>
    <%= form.check_box :default %>
  </div>
  <%= hidden_field_tag "current_user", @current_user.id  %>
  <div class="form-group">
    <%= form.submit t("addresses.add_address.add_button"), class: "btn btn-primary" %>
  </div>
<% end %>
