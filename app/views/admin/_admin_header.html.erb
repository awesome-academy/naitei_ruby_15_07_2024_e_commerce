<header>
  <nav class="navbar navbar-expand-lg header">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <div class="d-flex justify-content-between align-items-center flex-grow-1">
          <%= link_to admin_orders_path do %>
            <%= image_tag "logo.png", class: "logo-image" %>
          <% end %>

          <ul class="navbar-nav admin-nav-links">
            <li class="nav-item">
              <%= nav_link_to t("admin_nav.orders"), admin_orders_path %>
            </li>
            <li class="nav-item">
              <%= nav_link_to t("admin_nav.statistics"), admin_statistics_path %>
            </li>
            <li class="nav-item">
              <%= link_to t("admin_nav.categories"), "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= nav_link_to t("admin_nav.products"), admin_products_path(q: {product_name_cont: ""}) %>
            </li>
            <li class="nav-item">
              <%= nav_link_to t("admin_nav.customers"), admin_users_path(q: {search_all_cont: ""}), class: "nav-link" %>
            </li>
          </ul>

          <div class="dropdown">
            <%= link_to "#", id: "language", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
              <%= t ".language", class: "dropdown" %>
            <% end %>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t(".english"), url_for(request.params.merge(locale: "en")) %></li>
              <li><%= link_to t(".vietnamese"), url_for(request.params.merge(locale: "vi")) %></li>
            </ul>
          </div>

          <% if user_signed_in? %>
            <ul class="navbar-nav d-flex align-items-center">
              <li class="nav-item">
                <div class="dropdown">
                  <%= link_to "#", id: "account", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
                    <%= image_tag "pfp.png", class: "pfp-image" %>
                  <% end %>
                  <ul id="account-dropdown-menu" class="dropdown-menu">
                    <li><%= link_to t(".log_out"), destroy_user_session_path, data: { "turbo-method": :delete } %></li>
                  </ul>
                </div>
              </li>
            </ul>
          <% else %>
            <%= link_to login_path, class: "header-text" do %>
              <%= t ".log_in" %>
            <% end %>
            <%= link_to signup_path, class: "header-text" do %>
              <%= t ".sign_up" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>
